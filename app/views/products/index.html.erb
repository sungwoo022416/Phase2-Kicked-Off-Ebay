<p style="color: green"><%= notice %></p>

<div class = "absolute top-3 right-3 p-3 text-right text-top outline-double 	outline-width: 24px hover:bg-red-600 bg-rose-400 " >
  <%= link_to "Sell your stuff!", new_product_path %>
</div>

<body class="h-full bg-gradient-to-b from-blue-400 to-white overscroll-none">
  <div>
    <div>
      <h1 class = "text-left text-5xl font-bold text-rose-400">Products</h1>
    </div>

    <div class = "text-left text-2xl text-gray-800">
      <ul> <% @products.each do |product|%>
        <li>✨Product: <%=link_to "#{product.name}", product%></li>
          <ul class = "list-none">
            <li>😇Seller: <%=link_to product.user.name, product.user%></li>
            <li>🎁Categories:</li>
              <ul ><%product.categories.each do |c|%>
                <li><%=link_to c.name.titleize, c%></li>
              </ul>
              <%end%>
            <li>💰Price: $<%= product.price%> </li>
          </ul>
      </ul>
      <% end %>
    </div>
  </div>

</body>