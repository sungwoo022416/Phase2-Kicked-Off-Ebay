  <body class="h-screen bg-gradient-to-b from-yellow-100 to-blue-400 overscroll-none text-center"> 

  <div>
    <h1 class= "font-bold text-6xl text-center text-blue-400"> Sell Your Stuff!</h1>
<%= form_for @product do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

     <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.collection_select :category_ids, Category.all, :id, :name %>
  </div>

  <div>
    <%= form.label :Base_Price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :Seller, style: "display: block" %>
    <%= form.select :user_id, [["#{current_user.name}","#{@user.id}"]]%>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</body>