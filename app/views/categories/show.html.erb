<body class =  "h-full bg-gradient-to-b from-yellow-100 to-blue-400 overscroll-none items-center">

  <div class = "mx-auto text-center">
    <header class = "bg-blue-400 font-bold p-3 col-start-1 col-span-6 mx-auto">
      <div class= "p-2">
        <ul class = "list-none text-center mx-auto">
          <h1 class = "text-4xl no-underline text-green-400"><%= link_to "KɪᴄᴋᴇᴅOғғEʙᴀʏ🏠", '/'%></h1>
          <h2 class = "mx-auto text-2xl">Because ➡️➡️➡️➡️ Everyone🫵 Deserves💪 a Second♻️ Chance😇</h2>
              <% if logged_in? %>
          <h3 class = "text 2xl">Hello! <%=current_user.name %></h3><br>
            <a href="/home">  
            <button>My profile</button></a>
            <a href="/logout">  
            <button>Logout</button></a> 
          <% else %>
            <a href="/login">  
            <button class= "text-2xl rounded-none hover:rounded-full">Login</button></a>
            <a href="/users/new">  
            <button class= "text-2xl rounded-none hover:rounded-full">Sign Up</button></a> 
          <% end %>
            <h3 class = "mx-auto text-2xl">🔎🅢🅔🅐🅡🅒🅗🔎</h3>
            <%= form_tag(products_path, method: :get) do %>
            <%= text_field_tag(:search, params[:search])%>
            <%end%>
        </ul>
      </div>
    </header>
    <h1 class = "text-6xl text-blue-400"><%=@category.name.titleize%></h1>
    <ul class = "list-none text-4xl"><%@category.products.each do |p|%>
      <li>🔥 <%=link_to p.name, p%></li>
        <ul class = "list-none">
          <li>💰Current Bid <%=p.max_bid_price%></li>
        </ul><br>
      <%end%>
    </ul>

    </div>
  </div>
</body>