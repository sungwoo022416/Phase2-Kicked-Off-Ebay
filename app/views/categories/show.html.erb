<body class =  "h-screen bg-gradient-to-b from-yellow-100 to-blue-400 overscroll-none items-center">

  <div>
    <header class = "bg-blue-400 font-bold p-3 col-start-1 col-span-6 mx-auto">
      <div class= "p-2">
        <ul class = "list-none text-center mx-auto">
          <h1 class = "text-4xl no-underline text-green-400"><%= link_to "KickedOffEbay 🏠", '/'%></h1>
          <h2 class = "mx-auto text-2xl">Because ➡️➡️➡️➡️ Everyone🫵 Deserves💪 a Second♻️ Chance😇</h2>
          <form class = "mx-auto text-2xl">
            <input class = "text-center text-2xl text-bold bg-green-400 hover:bg-fuchsia-600" type = "text" value = "$earch" ></input>
          </form>
        </ul>
      </div>
    </header>
    <h1 class = "text-6xl text-blue-400"><%=@category.name.titleize%></h1>
    <ul class = "list-none text-4xl"><%@category.products.each do |p|%>
      <li>🔥 <%=link_to p.name, p%></li>
        <ul class = "list-none">
          <li>💰Current Bid <%=p.max_bid_price%></li>
        </ul><br>
      <%end%>
    </ul>

    </div>
  </div>
</body>