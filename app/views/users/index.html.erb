<body class="h-screen bg-gradient-to-b from-yellow-100 to-blue-400 overscroll-none text-left">
  <div>
    <header class = "bg-blue-400 font-bold p-3 mx-auto">
      <div class= "p-2">
        <ul class = "list-none text-center mx-auto">
          <h1 class = "text-4xl no-underline text-green-400"><%= link_to "KɪᴄᴋᴇᴅOғғEʙᴀʏ🏠", '/'%></h1>
          <h2 class = "mx-auto text-2xl">Because ➡️➡️➡️➡️ Everyone🫵 Deserves💪 a Second♻️ Chance😇</h2>
              <% if logged_in? %>
          <h3 class = "text 2xl">Hello! <%=current_user.name %></h3><br>
            <a href="/home">  
            <button>My profile</button></a>
            <a href="/logout">  
            <button>Logout</button></a> 
          <% else %>
            <a href="/login">  
            <button class= "text-2xl rounded-none hover:rounded-full">Login</button></a>
            <a href="/users/new">  
            <button class= "text-2xl rounded-none hover:rounded-full">Sign Up</button></a> 
          <% end %>
            <h3 class = "mx-auto text-2xl">🔎🅢🅔🅐🅡🅒🅗🔎</h3>
            <%= form_tag(products_path, method: :get) do %>
            <%= text_field_tag(:search, params[:search])%>
            <%end%>
        </ul>
      </div>
    </header>
    <div>
      <p style="color: green"><%= notice %></p>
    </div>

    <div class = "font-bold text-clip text-5xl text-blue-400 underline">
      <h1 >Users</h1>
    </div>



  <div class = "text-3xl ">
    <ul class = "list-none"><% @users.each do |user| %>
      <li>🔥 <%= link_to "#{user.name} ➡️ #{Product.all.filter { |p| p.user_id == user.id }.count} items for sale", user %></li>
    <% end %>
    </ul>
  </div>

  <%= link_to "New user", new_user_path %>
  </div>
</body>
