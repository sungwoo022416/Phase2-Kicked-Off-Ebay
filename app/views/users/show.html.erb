<body class="h-screen bg-gradient-to-b from-yellow-100 to-blue-400 overscroll-none">
  

  <div>
    <header class = "bg-blue-400 font-bold p-3 mx-auto">
      <div class= "p-2">
        <ul class = "list-none text-center mx-auto">
          <h1 class = "text-4xl no-underline text-green-400"><%= link_to "KickedOffEbay 🏠", '/'%></h1>
          <h2 class = "mx-auto text-2xl">Because ➡️➡️➡️➡️ Everyone🫵 Deserves💪 a Second♻️ Chance😇</h2>
          <form class = "mx-auto text-2xl">
            <input class = "text-center text-2xl text-bold bg-green-400 hover:bg-fuchsia-600" type = "text" value = "$earch" ></input>
          </form>
        </ul>
      </div>
    </header>

    <div>
      <h1 class = "text-center text-6xl font-bold text-blue-400"><%=@user.name%></h1>
    </div>

    <div>
      <h2 class = "text-left text-3xl text-blue-500 underline">Products for $ale</h2>
      <ul class = "list-none text-2xl"><%Product.all.filter { |p| p.user_id == @user.id }.each do |prod| %> <%#User.products not working %> 
        <li>🤑 <%=link_to prod.name, prod%></li>
        <%end%>
      </ul>
    </div>

    <div>
      <%= link_to "Edit this user", edit_user_path(@user) %> |
      <%= link_to "Back to users", users_path %>
      <%= link_to "Sell Your Stuff!", '/products/new'%>

      <%= button_to "Delete your profile", @user, method: :delete %>
    </div>

  </div>

</body>


